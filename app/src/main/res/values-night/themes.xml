<resources>

	<style name="App.Theme.CopyManga" parent="MangaX.Theme.Material3_Project">
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:windowLightStatusBar">false</item>
		<item name="android:windowTranslucentNavigation">true</item>
		<item name="android:textColor">@color/mangax_color_asc</item>
		<item name="iconTint">@color/mangax_white</item>
	</style>

	<style name="App.Theme.CopyManga.Splash" parent="Theme.SplashScreen">

		<!-- 指定App原来的主题，当SplashScreen结束时主题就能被复原，从而不影响APP的主题外观 -->
		<item name="postSplashScreenTheme">@style/App.Theme.CopyManga</item>

		<!-- SplashIcon -->
		<item name="windowSplashScreenAnimatedIcon">@mipmap/app_ic_launcher</item>
	</style>

</resources>