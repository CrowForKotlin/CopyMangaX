    <TextView
        android:id="@+id/home_comic_rv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_dp2_5"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="@dimen/base_sp11"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_comic_rv_author"
        app:layout_constraintEnd_toEndOf="@id/home_book_shadow_layout"
        app:layout_constraintStart_toStartOf="@id/home_book_shadow_layout"
        app:layout_constraintTop_toBottomOf="@+id/home_book_shadow_layout"
        tools:text="@string/BaseTodoTextView" />

    <TextView
        android:id="@+id/home_comic_rv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dp2_5"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="@dimen/base_dp10"
        android:paddingEnd="@dimen/base_dp10"
        android:textSize="@dimen/base_sp10"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/home_ic_author_24dp"
        app:layout_constraintBottom_toTopOf="@id/home_comic_rv_hot"
        app:layout_constraintEnd_toEndOf="@+id/home_comic_rv_name"
        app:layout_constraintStart_toStartOf="@+id/home_comic_rv_name"
        tools:text="@string/BaseTodoTextView" />

    <TextView
        android:id="@+id/home_comic_rv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dp25"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="@dimen/base_sp10"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/home_ic_comic_hot_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/home_comic_rv_author"
        app:layout_constraintStart_toStartOf="@+id/home_comic_rv_author"
        tools:text="@string/BaseTodoTextView" />

