<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:visibility="visible"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools">

	<com.google.android.material.button.MaterialButton
		android:id="@+id/home_comic_button_title"
		style="@style/Base.Theme.Button.Icon.Text"
		tools:icon="@drawable/home_ic_new_24dp"
		tools:text="@string/BaseAppName_CH"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:clickable="false"
		android:gravity="start|center_vertical"
		android:textSize="@dimen/base_sp18"
		android:textStyle="bold"
		app:iconPadding="@dimen/base_dp12"
		app:iconSize="@dimen/base_dp48"
		app:iconTint="@null" />

	<com.google.android.material.button.MaterialButton
		android:id="@+id/home_comic_more"
		style="@style/Base.Theme.Button.Icon.Text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end|center_vertical"
		android:layout_marginTop="0dp"
		android:clickable="false"
		android:gravity="center"
		app:icon="@drawable/base_ic_more_24dp"
		app:iconTint="@color/home_light_blue_500" />

</androidx.appcompat.widget.LinearLayoutCompat>
