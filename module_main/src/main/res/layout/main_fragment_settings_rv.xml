<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingStart="@dimen/base_dp10"
    android:paddingEnd="@dimen/base_dp10"
    android:paddingTop="@dimen/base_dp15"
    android:paddingBottom="@dimen/base_dp15"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/settings_rv_icon"
        android:layout_width="@dimen/base_dp24"
        android:layout_height="@dimen/base_dp24"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/settings_rv_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/base_dp48"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:maxLines="2"
        android:layout_marginStart="@dimen/base_dp20"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/base_sp18"
        tools:text="@string/BaseTodoTextView" />

</androidx.appcompat.widget.LinearLayoutCompat>