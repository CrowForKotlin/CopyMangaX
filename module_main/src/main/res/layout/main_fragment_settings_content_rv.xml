<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="@dimen/base_dp15"
    android:paddingTop="@dimen/base_dp15"
    android:paddingEnd="@dimen/base_dp15"
    android:paddingBottom="@dimen/base_dp15">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/icon"
        android:layout_width="@dimen/base_dp20"
        android:layout_height="@dimen/base_dp20"
        android:layout_gravity="center"
        android:tint="@color/mangax_color_asc"
        tools:src="@drawable/main_ic_resolution_24dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/base_dp20"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/mangax_color_asc"
        android:textSize="@dimen/base_sp12_5"
        android:textStyle="bold"
        tools:text="个性化" />

</androidx.appcompat.widget.LinearLayoutCompat>