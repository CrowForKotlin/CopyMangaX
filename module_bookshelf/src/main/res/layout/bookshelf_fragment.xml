<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.fragment.BookshelfFragment">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/bookshelf_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/base_home_bar_bg">

		<com.google.android.material.button.MaterialButtonToggleGroup
			android:id="@+id/bookshelf_button_gropu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			app:checkedButton="@+id/bookshelf_comic"
			app:layout_constraintEnd_toStartOf="@+id/bookshelf_move_top"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:selectionRequired="true"
			app:singleSelection="true">


			<com.google.android.material.button.MaterialButton
				android:id="@+id/bookshelf_comic"
				style="@style/Widget.Material3.Button.OutlinedButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/bookshelf_comic"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/bookshelfChip" />


			<com.google.android.material.button.MaterialButton
				android:id="@+id/bookshelf_novel"
				style="@style/Widget.Material3.Button.OutlinedButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/bookshelf_novel"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@+id/bookshelfChip" />

		</com.google.android.material.button.MaterialButtonToggleGroup>

		<com.google.android.material.button.MaterialButton
			android:id="@+id/bookshelf_edit"
			style="@style/Widget.Material3.Button.IconButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			app:icon="@drawable/base_ic_edit_24dp"
			app:iconTint="@null"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/bookshelf_filter"
			style="@style/Widget.Material3.Button.IconButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			app:icon="@drawable/bookshelf_ic_filter_24dp"
			app:iconTint="@null"
			app:layout_constraintEnd_toStartOf="@+id/bookshelf_edit"
			app:layout_constraintTop_toTopOf="@+id/bookshelf_edit" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/bookshelf_move_top"
			style="@style/Widget.Material3.Button.IconButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			app:icon="@drawable/bookshelf_ic_move_top_24dp"
			app:iconTint="@null"
			app:layout_constraintEnd_toStartOf="@+id/bookshelf_move_bottom"
			app:layout_constraintTop_toTopOf="@+id/bookshelf_edit" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/bookshelf_move_bottom"
			style="@style/Widget.Material3.Button.IconButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			app:icon="@drawable/bookshelf_ic_move_bottom_24dp"
			app:iconTint="@null"
			app:layout_constraintEnd_toStartOf="@+id/bookshelf_filter"
			app:layout_constraintTop_toTopOf="@+id/bookshelf_edit" />

		<TextView
			android:id="@+id/bookshelf_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginBottom="@dimen/base_dp5"
			android:ellipsize="end"
			android:maxLines="1"
			android:textAlignment="center"
			android:textSize="@dimen/base_sp16"
			android:textStyle="bold"
			app:drawableStartCompat="@drawable/bookshelf_ic_novel_24dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/bookshelf_edit"
			tools:text="@string/bookshelf_count" />


	</androidx.constraintlayout.widget.ConstraintLayout>

	<!--<androidx.viewpager2.widget.ViewPager2
		android:id="@+id/bookshelf_vp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="@integer/material_motion_duration_long_1" />
-->
	<com.scwang.smart.refresh.layout.SmartRefreshLayout
		android:id="@+id/bookshelf_refresh"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:visibility="gone"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/bookshelf_bar">

		<com.scwang.smart.refresh.header.MaterialHeader
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/bookshelf_rv_comic"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="invisible"
				app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
				app:spanCount="3"
				tools:listitem="@layout/bookshelf_fragment_rv" />

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/bookshelf_rv_novel"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="invisible"
				app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
				app:spanCount="3"
				tools:listitem="@layout/bookshelf_fragment_rv" />

		</FrameLayout>

	</com.scwang.smart.refresh.layout.SmartRefreshLayout>

	<TextView
		android:id="@+id/bookshelf_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_weight="1"
		android:gravity="center"
		android:text="@string/bookshelf_empty"
		android:textSize="@dimen/base_sp18" />


</androidx.appcompat.widget.LinearLayoutCompat>