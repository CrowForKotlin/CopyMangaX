<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MangaX.Theme.Material3" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="MangaX.TextAppearance.Material3.ActionBar.Title.Bold" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@macro/m3_comp_top_app_bar_small_headline_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MangaX.TextAppearance.Material3.ActionBar.SubTitle.Bold" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@macro/m3_comp_top_app_bar_small_headline_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ++++++++++++++++ -->

    <style name="MangaX.Theme.Material3_Project" parent="Theme.Material3.DynamicColors.Light.NoActionBar" >
        <item name="android:textColor">@color/mangax_color_asc</item>
        <item name="colorPrimary">@color/mangax_color_asc</item>
        <item name="colorOnPrimary">@color/mangax_color_desc</item>
        <item name="colorSurfaceContainer">@color/mangax_color_desc</item>
        <item name="bottomSheetDialogTheme">@style/MangaX.ModalBottomSheetDialog</item>
    </style>
    <style name="MangaX.ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MangaX.ModalBottomSheet</item>
    </style>
    <style name="MangaX.ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <!-- Apply attributes here -->
    </style>

    <style name="MangaX.Theme.Button.Elevated.Icon" parent="Widget.Material3.Button.ElevatedButton.Icon" />
    <style name="MangaX.Theme.Button.Icon.Text" parent="Widget.Material3.Button.IconButton" />
    <style name="MangaX.Theme.Button.Icon.Tint" parent="Widget.Material3.Button.IconButton" />
    <style name="MangaX.Theme.Button.Icon.Tint.Text" parent="Widget.Material3.Button.IconButton" />

    <style name="MangaX.Theme.Button.Icon.Back" parent="Widget.Material3.Button.IconButton" >
        <item name="iconTint">@color/mangax_black</item>
    </style>

    <style name="MangaX.Theme.BG" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/mangax_bg</item>
    </style>

    <style name="MangaX.Tablayout.TextAppearance" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">@dimen/base_sp12</item>
    </style>

</resources>