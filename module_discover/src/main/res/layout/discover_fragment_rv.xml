	<TextView
		android:id="@+id/discover_rv_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/base_dp2_5"
		android:ellipsize="end"
		android:gravity="center"
		android:maxLines="2"
		android:textSize="@dimen/base_sp11"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/discover_rv_author"
		app:layout_constraintEnd_toEndOf="@id/discover_rv_book_shadow_layout"
		app:layout_constraintStart_toStartOf="@id/discover_rv_book_shadow_layout"
		app:layout_constraintTop_toBottomOf="@+id/discover_rv_book_shadow_layout"
		tools:text="书名:xxxx" />

	<TextView
		android:id="@+id/discover_rv_author"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/base_dp2_5"
		android:ellipsize="end"
		android:gravity="center"
		android:maxLines="1"
		android:paddingStart="@dimen/base_dp10"
		android:paddingEnd="@dimen/base_dp10"
		android:textSize="@dimen/base_sp10"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@id/discover_rv_hot"
		app:layout_constraintEnd_toEndOf="@+id/discover_rv_name"
		app:layout_constraintStart_toStartOf="@+id/discover_rv_name"
		tools:text="作者：Crow" />

	<TextView
		android:id="@+id/discover_rv_hot"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/base_dp2_5"
		android:ellipsize="end"
		android:gravity="center"
		android:maxLines="1"
		android:paddingStart="@dimen/base_dp10"
		android:paddingEnd="@dimen/base_dp10"
		android:textSize="@dimen/base_sp10"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@id/discover_rv_time"
		app:layout_constraintEnd_toEndOf="@+id/discover_rv_name"
		app:layout_constraintStart_toStartOf="@+id/discover_rv_name"
		tools:text="热度：404" />

	<TextView
		android:id="@+id/discover_rv_time"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:ellipsize="end"
		android:gravity="center"
		android:maxLines="2"
		android:textSize="@dimen/base_sp10"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/discover_rv_author"
		app:layout_constraintStart_toStartOf="@+id/discover_rv_author"
		tools:text="时间：2044年" />

</androidx.constraintlayout.widget.ConstraintLayout>